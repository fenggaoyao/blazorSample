@inject IModel  Model

<div class="unit">
    <div class="label">
        <label for="btnImperialToggle">计量:</label>
    </div>
    <div class="labelTarget">
        <button id="btnImperialToggle" onclick="@Model.ToggleImperial">@ToggleText</button>
    </div>
</div>

@functions {
string ToggleText
{
    get
    {
        return Model.IsImperial ? "英制" : "公制";
    }
}
}